{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<main class="login">
		<div class="login__content shadow-lg mb-5 bg-body-tertiary rounded">
			<figure class="login__image">
				<img src="https://images.pexels.com/photos/1762973/pexels-photo-1762973.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Illustration">
			</figure>



			{{ form_start(registrationForm) }}

			<div class="row p-4 d-flex flex-wrap justify-content-center w-100" class="login__form">
                <h1 class="h3 mb-3 font-weight-normal text-center">Nouveau compte</h1>
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as
                        {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

				<div class="col-10 mb-1">
					{{ form_row(registrationForm.email, {attr: {class: 'form-label form-control'}}) }}
				</div>

				<div class="col-10 mb-1">
					{{ form_row(registrationForm.password, {attr: {class: 'form-label form-control'}}) }}
				</div>

				<div class="col-10 mb-1">
					{{ form_row(registrationForm.confirmPassword, {attr: {class: 'form-label form-control'}}) }}
				</div>

				

				<div class="col-10 col-lg-5 mb-1">
					{{ form_row(registrationForm.firstName, {attr: {class: 'form-label form-control'}}) }}
				</div>

				<div class="col-10  col-lg-5 mb-1">
					{{ form_row(registrationForm.lastName, {attr: {class: 'form-label form-control'}}) }}
				</div>
				<div class="col-10 mb-1">
					{{ form_row(registrationForm.address, {attr: {class: 'form-label form-control'}}) }}
				</div>
				<div class="col-10 col-lg-5 mb-1">
					{{ form_row(registrationForm.zipCode, {attr: {class: 'form-label form-control'}}) }}
				</div>
				<div class="col-10 col-lg-5 mb-1">
					{{ form_row(registrationForm.city, {attr: {class: 'form-label form-control'}}) }}
				</div>
<div class="col-10 mb-1">
					{{ form_row(registrationForm.image, {attr: {class: 'form-label form-control'}}) }}
				</div>

				<div class="d-flex align-items-center w-100 flex-column">

					{{ form_row(registrationForm.submit, {attr: {class: 'btn btn-success mt-4'}}) }}
					<br>
					<p class="text-center mb-1">Déjà client ?
						<a href="{{ path('app_login') }}">
							<span class="text-primary">Me connecter</span>
						</a>
					</p>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</main>
{% endblock %}
